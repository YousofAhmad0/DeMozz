@page
@model DeMozzWeb.Pages.CVs.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-danger">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Add" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp;Add new CV
            </a>
        </div>
    </div>

    <br/> 

    <table class="table table-bordered table-striped table-dark" style="width:100%">
        <thead class="table-light">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Grade</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var ob in Model.CVs){
                <tr>
                    <td>@ob.FN</td>
                    <td>@ob.LN</td>
                    <td>@ob.Email</td>
                    <td>@ob.Gender</td>
                    <th>@ob.Grade</th>
                    <td>
                        <div class="btn-group" style="float:right" role="group">
                            <a asp-page="" asp-route-id="@ob.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-list-columns"></i>
                            </a>
                            <a asp-page="" asp-route-id="@ob.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="" asp-route-id="@ob.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            } 
        </tbody>
    </table>


</div>