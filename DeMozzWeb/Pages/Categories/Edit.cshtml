@page
@model DeMozzWeb.Pages.Categories.EditModel

<div class="container">
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger pl-3">Edit Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control"/>
            <span asp-validation-for="Category.DisplayOrder"  class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-success" style="width:150px;">Update</button>
        <a asp-page="Index" class="btn btn-light mx-3" style="width:150px">Back to List</a>
    </div>
</form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}